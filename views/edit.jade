doctype
html(lang="en")
head
  meta(charset="UTF-8")
  link(rel="stylesheet", href="/css/styles.css")
  title A NEW TODOODOO
body
  form#new_todo(action="/todos/#{todo._id}?_method=PUT", method="POST")
    fieldset
      div
        label(for="title") TODO ITEM
        br
        input#title(type="text", name="title", placeholder="SOME TODO ITEM", value="#{todo.title}")
      div
        label(for="description") DESCRIPTION
        br
        textarea#description(rows="9", cols="40", name="description", placeholder="SOME DESCRIPTION")!= todo.description
      div
        button SAVE